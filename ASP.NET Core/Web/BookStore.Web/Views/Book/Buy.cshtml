                                    </form>
                                }*@
                                @*<input type="button" value="Create" onclick="location.href='@Url.Action("Charge", "Payment")'" />*@
                                <a asp-controller="Order" asp-action="Form" asp-route-id = "@Model.Id" class="btn btn-sm btn-outline-secondary text-uppercase w-100">Order Now</a>
