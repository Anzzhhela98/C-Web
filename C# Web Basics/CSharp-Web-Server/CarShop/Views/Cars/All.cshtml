<h1 class="text-center mt-2">My Cars</h1>
<div class="row mt-2 mb-4">
  @foreach (var modelCar in @Model)
    {
          <div class="card col-6 col-lg-3 game-card">
        <img src="@modelCar.Image"
             class="card-img-top img-fluid card-image rounded" data-toggle="tooltip"
             data-placement="bottom" title="@modelCar.Year @modelCar.Model">
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">Plate # @modelCar.PlateNumber</li>
                <li class="list-group-item">
                    <span class="bg-danger col-sm">Remaining Issues: @modelCar.RemainingIssues</span>
                    <span class="bg-success col-sm">Fixed Issues: @modelCar.FixedIssues</span>
                </li>
            </ul>
            <a href="/Issues/CarIssues?carId=@modelCar.Id" class="btn btn-block btn-primary">Check issues</a>
        </div>
    </div>
    }
</div>